<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E3F2FD">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Device Name Header -->
                <TextView
                    android:id="@+id/deviceNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pool Monitor"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="#1976D2"
                    android:layout_marginBottom="24dp" />

                <!-- Temperature Card -->
                <LinearLayout
                    android:id="@+id/temperatureCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/card_background_blue"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <!-- Temperature Display -->
                    <TextView
                        android:id="@+id/temperatureCelsius"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/temperatureFahrenheit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--Â°F"
                        android:textSize="28sp"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="16dp" />

                    <!-- Temperature Progress Bar -->
                    <ProgressBar
                        android:id="@+id/temperatureProgress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="200dp"
                        android:layout_height="8dp"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="@android:color/white"
                        android:progressBackgroundTint="#80FFFFFF"
                        android:layout_marginBottom="16dp" />

                    <!-- Status Text -->
                    <TextView
                        android:id="@+id/statusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Connecting..."
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:textAlignment="center" />

                </LinearLayout>

                <!-- Device Status Card -->
                <LinearLayout
                    android:id="@+id/statusCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/card_background_white"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š Device Status"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:layout_marginBottom="16dp" />

                    <!-- WiFi Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ“¶ WiFi:"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/wifiStatusText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Connected"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:textAlignment="textEnd" />

                    </LinearLayout>

                    <!-- Signal Strength -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ“¡ Signal:"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/signalStrengthText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Good"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:textAlignment="textEnd" />

                    </LinearLayout>

                    <!-- Uptime -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="â±ï¸ Uptime:"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/uptimeText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="--"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:textAlignment="textEnd" />

                    </LinearLayout>

                    <!-- Last Update -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ”„ Updated:"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/lastUpdateText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Loading..."
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:textAlignment="textEnd" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Tips Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="80dp"
                    android:background="@drawable/card_background_orange"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡ Pool Temperature Guide"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#E65100"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸŠâ€â™‚ï¸ Perfect: 78-82Â°F (25-28Â°C)\nðŸŒŠ Good: 75-85Â°F (24-29Â°C)\nðŸ¥¶ Too Cold: Below 70Â°F (21Â°C)\nðŸ”¥ Too Warm: Above 85Â°F (29Â°C)"
                        android:textSize="14sp"
                        android:textColor="#BF360C"
                        android:lineSpacingExtra="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="\nâ€¢ Pull to refresh for latest reading\nâ€¢ Tap temperature card to refresh\nâ€¢ Updates automatically every 30 seconds"
                        android:textSize="12sp"
                        android:textColor="#8D6E63"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <!-- Settings FAB -->
        <ImageButton
            android:id="@+id/settingsFab"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:src="@android:drawable/ic_menu_preferences"
            android:background="@drawable/fab_background"
            android:contentDescription="Settings"
            android:scaleType="center" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>